<Window x:Class="LayoutSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutSamples"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="Stack Panel" Click="OnStackPanel" />
        <Button Content="Wrap Panel" Click="OnWrapPanel" />
        <Button Content="Canvas" Click="OnCanvas" />
        <Button Content="Dock Panel" Click="OnDockPanel" />
        <Button Content="Grid" Click="OnGrid" />
    </StackPanel>
</Window>
